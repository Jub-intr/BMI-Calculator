<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/running"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgvw"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:src="@drawable/last"/>

    <EditText
        android:id="@+id/heightedt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/baseline_height_24"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:hint="Admit your tallness here: "
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColorHint="@color/green"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgvw"/>


    <EditText
        android:id="@+id/heightedt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/edit_text"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:hint="Admit your weight here : "
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColorHint="@color/green"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heightedt"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/weight"
        app:layout_constraintStart_toStartOf="@id/heightedt2"
        app:layout_constraintTop_toTopOf="@id/heightedt2"
        app:layout_constraintBottom_toBottomOf="@id/heightedt2"
        android:layout_marginLeft="14dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:backgroundTint="#F9FF68"
        android:textColor="@color/black"
        android:text="Click To calculate"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/heightedt2"/>



    <TextView
        android:id="@+id/txtvw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:padding="12dp"
        android:textStyle="bold"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/btn"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="Body Mass Index Point is : "
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtvw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtvw"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="7dp"
        android:text="Body Mass Index type is : "
        android:textAlignment="center"/>








</androidx.constraintlayout.widget.ConstraintLayout>